{
    "name": "backend",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "build": "tsc",
        "start": "node dist/index.js",
        "setup": "npx prisma generate && npx prisma migrate dev --name init && ts-node src/seed.ts"
    },
    "dependencies": {
        "@prisma/client": "^5.10.2",
        "cors": "^2.8.5",
        "currency.js": "^2.0.4",
        "express": "^4.18.3"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^30.0.0",
        "@types/node": "^20.11.24",
        "@types/supertest": "^6.0.3",
        "jest": "^30.2.0",
        "prisma": "^5.10.2",
        "supertest": "^7.1.4",
        "ts-jest": "^29.4.5",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.3.3"
    }
}